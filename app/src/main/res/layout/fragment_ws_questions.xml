<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height= "match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".wsQuestions">



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="302dp"
        android:layout_height="208dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryTextView"
        app:srcCompat="@drawable/books" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="286dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="417dp"
        android:fontFamily="@font/zilla_slab_bold"
        android:text="Espanol"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Space" />

    <Button
        android:id="@+id/button6"
        android:layout_width="310dp"
        android:layout_height="104dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="771dp"
        android:layout_marginEnd="101dp"
        android:backgroundTint="#654321"
        android:fontFamily="@font/zilla_slab_bold"
        android:text="Check!"
        android:textSize="34sp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/TextBox"
        android:layout_width="352dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="535dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="310dp"
        android:fontFamily="@font/zilla_slab_light"
        android:hint="La respuesta"
        android:isScrollContainer="false"
        android:singleLine="true"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="425dp" />

    <TextView
        android:id="@+id/rightAns"
        android:layout_width="349dp"
        android:layout_height="113dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="594dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="184dp"
        android:text="Correct"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</FrameLayout>